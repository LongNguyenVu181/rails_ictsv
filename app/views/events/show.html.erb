<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Startdate:</strong>
  <%= @event.startDate %>
</p>

<p>
  <strong>Enddate:</strong>
  <%= @event.endDate %>
</p>

<p>
  <strong>Point:</strong>
  <%= @event.point %>
  
</p>

<div class="card-header">レビュー</div>
      <div class="card-body">
        <ul>
          <% @event.event_comments.each do |event_comment|%>
          　<div class="card border-light mb-3" style="max-width: 20rem;">
              <div class="card-header"><%= event_comment.user.email %></div>
              <div class="card-body">
                <p class="card-text"><%= event_comment.content %></p>
              </div>
            </div>
          <% end %>
        </ul>
      <%= form_with(model: @event_comment, local: true) do |form| %>
        <div class= "field">
          <%= form.text_area :content, :class => "form-control" %>
          <%= form.hidden_field :event_id, :value => @event.id %>
        </div>
        <div class="actions">
          
          <%= form.submit %>
        </div>
       <% end %>
  </div>
<%= form_with(model: EventRegistration.new, local: true) do |form| %>

  <div class="field">
    <%= form.hidden_field:user_id, value: 2 %>
  </div>

  <div class="field">
    <%= form.hidden_field :event_id, value:@event.id %>
  </div>
  <div class="field">
    <%= form.label :reason %>
    <%= form.text_area :reason %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
