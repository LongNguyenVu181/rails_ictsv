<p id="お知らせ"><%= notice%></p>

<h1>イベントの証拠</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>イベント</th>
      <th>注意</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_proofs.each do |event_proof| %>
      <tr>
        <td><%= event_proof.user.email if event_proof.user  %></td>
        <td><%= event_proof.event.name if event_proof.event  %></td>
        <td><%= event_proof.note %></td>
        <td><%= link_to '表示する', event_proof %></td>
        <td><%= link_to '更新する', edit_event_proof_path(event_proof) %></td>
        <td><%= link_to '削除する', event_proof, method: :delete, data: { confirm: '本気？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'イベントの証拠を作成する', new_event_proof_path %>
